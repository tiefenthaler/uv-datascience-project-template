{
    "_copy_without_render": [
        ".github/workflows/*.yml",
        "*.html",
        "*.rst"
    ],
    "_hooks_dir": "cookiecutter_hooks",
    "project_name": "project-name",
    "repo_name": "{{ cookiecutter.project_name.lower().replace(' ', '-') }}",
    "module_name": "{{ cookiecutter.project_name.lower().replace(' ', '_').replace('-', '_') }}",
    "project_description": "A short description of the project.",
    "author_name": "Your name (or your organization/company/team)",
    "author_email": "your.email@example.com",
    "author_github_handle": "your-github-handle",
    "python_version": "3.12",
    "open_source_license": [
        "Not open source",
        "MIT license",
        "BSD license",
        "Apache-2.0"
    ],
    "environment_manager": ["uv"],
    "dependency_file": ["pyproject.toml"],
    "directory_structure": ["src"],
    "testing_framework": [
        "pytest-and-code-coverage",
        "pytest-only",
        "none"
    ],
    "linting_and_formatting": [
        "ruff",
        "none"
    ],
    "static_type_checking": [
        "pyright",
        "none"
    ],
    "docs_mkdocs": ["y", "n"],
    "pre_commit_hooks": ["y", "n"],
    "github_actions_ci": ["y", "n"],
    "use_vscode_devcontainer": ["y", "n"],
    "use_docker_production": [
        "none",
        "Dockerfile",
        "multistage.Dockerfile"
    ]
}
